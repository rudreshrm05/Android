<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_900"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLUETOOTH"
            android:textColor="@color/colorAccent"
            android:textSize="35dp"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:background="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"/>

    <!--Bluetooth enble test-->

        <LinearLayout
            android:id="@+id/bluetooth_enable_option"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_bluetooth_enble"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Enable bluetooth"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/indicator_bluetooth_enable"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/black"
                android:padding="10dp" />
        </LinearLayout>

    <!--Bluetooth disable test-->

    <LinearLayout
        android:id="@+id/bluetooth_disable_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_bluetooth_disable"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Disable bluetooth"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/indicator_bluetooth_disable"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:padding="10dp" />
    </LinearLayout>

    <!--Bluetooth pair test-->

    <LinearLayout
        android:id="@+id/bluetooth_pair_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_bluetooth_pair"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Pair device"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/indicator_bluetooth_pair"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:padding="10dp" />
    </LinearLayout>

    <!--Bluetooth play music test-->

    <LinearLayout
        android:id="@+id/bluetooth_play_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_bluetooth_play"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Play music"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/indicator_bluetooth_play"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>