<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/material_grey_900"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIM functionality"
        android:textColor="@color/colorAccent"
        android:textSize="35dp"
        android:fontFamily="serif"
        android:layout_gravity="center"
        android:background="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <!--SIM1 test-->

    <LinearLayout
        android:id="@+id/sim1_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_sim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:background="@color/black"
            android:text="SIM 1"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/indicator_sim1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:padding="10dp" />
    </LinearLayout>

    <!--SIM2 test-->

    <LinearLayout
        android:id="@+id/sim2_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_sim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:background="@color/black"
            android:text="SIM 2"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/indicator_sim2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:padding="10dp" />
    </LinearLayout>

    <!--Check IMEI number-->

    <LinearLayout
        android:id="@+id/check_imei_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/text_check_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="92"
            android:background="@color/black"
            android:text="Check IMEI"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/indicator_check_imei"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/black"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>